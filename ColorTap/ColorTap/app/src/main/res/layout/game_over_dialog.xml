<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/final_score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/game_over_box"
        app:layout_constraintEnd_toEndOf="@id/game_over_box"
        android:textColor="@color/white"
        android:text="FINAL SCORE : 0"
        android:background="@color/black"
        android:gravity="center"
        android:paddingTop="20dp"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/final_score"
        android:id="@+id/game_over_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:text="GAME OVER !!!"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingBottom="60dp"
        android:paddingHorizontal="60dp"
        android:paddingTop="30dp"
        />
    <TextView
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/game_over_box"
        app:layout_constraintEnd_toEndOf="@id/game_over_box"
        android:text="CONTINUE"
        android:textColor="@color/teal_200"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>